<%# 記録一覧 %>
<div class="records">

  <div class="record">
    <div class="record-p-upper">
      <div class="record-date">
        20xx/xx/xx(木) xx:xx
      </div>
    </div>

    <div class="record-p-lower">
      <div class="record-text">
        記録内容
      </div>
      <div class="record-user">
        職員名
      </div>
    </div>
  </div>

  <div class="record">

    <div class="record-p-upper">
      <div class="record-date">
        20xx/xx/xx(金) xx:xx
      </div>
    </div>

    <div class="record-p-lower">
      <div class="record-text">
        記録内容
      </div>
      <div class="record-user">
        職員名
